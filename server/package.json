{
  "name": "panda-dog-server",
  "version": "1.0.0",
  "description": "Panda & Dog cooperative puzzle game server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm --packages=external",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.12",
    "@types/qrcode": "^1.5.5",
    "esbuild": "^0.20.0",
    "tsx": "^4.19.0",
    "typescript": "^5.3.3"
  }
}
